<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0">
</script>
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css" />
<script src="https://cdn.jsdelivr.net/npm/flatpickr">
</script>
<div>
  <div class="flex content-center justify-center flex-wrap" id="charts" phx-hook="download">
    <div id="contact-chart" class="card">
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
        <.link id="export-link2" href="#" phx-click="export" phx-value-chart={:contacts}>
          <%= GlificWeb.StatsLive.render_button_svg() %>
        </.link>
      </button>
      <%= @contact_chart_svg %>
    </div>
    <div id="conversation-chart" class="card">
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
        <.link id="export-link2" href="#" phx-click="export" phx-value-chart={:conversations}>
          <%= GlificWeb.StatsLive.render_button_svg() %>
        </.link>
      </button>
      <%= @conversation_chart_svg %>
    </div>
    <div id="optin-chart" class="card">
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
        <.link id="export-link1" href="#" phx-click="export" phx-value-chart={:optin}>
          <%= GlificWeb.StatsLive.render_button_svg() %>
        </.link>
      </button>
      <%= @optin_chart_svg %>
    </div>
    <div id="notification-chart" class="card">
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
        <.link id="export-link2" href="#" phx-click="export" phx-value-chart={:notifications}>
          <%= GlificWeb.StatsLive.render_button_svg() %>
        </.link>
      </button>
      <%= @notification_chart_svg %>
    </div>
    <div id="notification-chart" class="card">
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
        <.link id="export-link2" href="#" phx-click="export" phx-value-chart={:messages}>
          <%= GlificWeb.StatsLive.render_button_svg() %>
        </.link>
      </button>
      <%= @message_chart_svg %>
    </div>
    <div id="notification-chart" class="card">
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
        <.link id="export-link2" href="#" phx-click="export" phx-value-chart={:contact_type}>
          <%= GlificWeb.StatsLive.render_button_svg() %>
        </.link>
      </button>
      <%= @contact_type_chart_svg %>
    </div>
    <div id="messages-chart" class="card m-2">
      <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
        <.link id="export-link2" href="#" phx-click="export" phx-value-chart={:active_hour}>
          <%= GlificWeb.StatsLive.render_button_svg() %>
        </.link>
      </button>
      <%= @messages_chart_svg %>
    </div>
  </div>
</div>

<div class="flex content-center justify-center flex-wrap">
  <div class="table-container">
    <button class="bg-white hover:bg-gray-100 text-gray-800 font-semibold py-2 px-4 rounded shadow">
      <.link id="export-link2" href="#" phx-click="export" phx-value-chart={:table}>
        <%= GlificWeb.StatsLive.render_button_svg() %>
      </.link>
    </button>
    <div
      id="broadcast-table"
      class="table"
      phx-hook="table"
      data-table-data={Jason.encode!(@broadcast_data)}
      data-table-headers={Jason.encode!(@broadcast_headers)}
      phx-update="ignore"
    >
    </div>
  </div>
</div>

<div class="flex content-center justify-center flex-wrap">
  <a class="card">
    <h5 class="mb-2 text-xl font-bold tracking-tight text-gray-900 dark:text-white">
      Monthly Conversations
    </h5>

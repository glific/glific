                  />
                </svg>
              </div>
              <div class="py-2 px-2">
                <svg
                  width="14"
                  height="8"
                  viewBox="0 0 14 8"
                  fill="none"
                  xmlns="http://www.w3.org/2000/svg"
                >
                  <path
                    d="M1 1L7 7L13 1"
                    stroke="#717971"
                    stroke-width="2"
                    stroke-linecap="round"
                    stroke-linejoin="round"
                  />
                </svg>
              </div>
            </div>
            <div class="dropdown-content absolute right-10">
              <ul class="p-2">
                <li class="p-2"><%= @current_user.name %></li>
                <li class="p-2">
                  <button class="text-red-700">
                    <%= link("Log out",
                      to: Routes.user_session_path(@conn, :delete),
                      method: :delete,
                      class: "mr-4 hover:underline md:mr-6"
                    ) %>
                  </button>
                </li>
              </ul>
            </div>
          </div>
        <% end %>
      </section>
    </header>
    <%= @inner_content %>
  </body>
</html>

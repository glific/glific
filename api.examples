query contact($id: ID!) {
  contact(id: $ID) {
    contact {
      id
      name
      phone
    }
    errors {
      key
      message
    }
  }
}

mutation creLanguage($input:LanguageInput!) {
  createLanguage(input: $input) {
    language {
      id
      label
      locale
    }
    errors {
      key
      message
    }
  }
}

query listContacts($filter: ContactFilter, $order: SortOrder) {
  contacts(filter:$filter, order:$order) {
    id
    name
    phone
  }
}


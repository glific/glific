query tag($id:ID!){
  tag(id: $id) {
    tag {
      id
      label
      language {
        id
        label
      }
      isActive
    }
    errors {
      key
      message
    }

  }
}

mutation delTag($id: ID!) {
  deleteTag(id: $id) {
    tag {
      id
    }
    errors {
      key
      message
    }
  }
}

mutation creTag($input:TagInput!) {
  createTag(input: $input) {
    tag {
      id
      label
      language {
        id
        label
      }
      description
    }
    errors {
      key
      message
    }
  }
}


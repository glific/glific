query conversations($messageOpts: Opts!, $contactOpts: Opts!, $filter: ConversationsFilter! ) {
  conversations(messageOpts: $messageOpts, contactOpts: $contactOpts, filter: $filter ) {
    contact {
      id
      name
    }
    messages {
      id
      body
    }
  }
}

